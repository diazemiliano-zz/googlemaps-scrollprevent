extends _layout.jade
block title
  title mapScrollPrevent.js - Local Text
block localscript
  script(src="../dist/mapScrollPrevent.js")
block content
  h1 Local Test
  script
    :coffee-script
      $ ->    
        $("#btn-start").click ->
          $("iframe[src*='google.com/maps']")
            .mapScrollPrevent {
              printLog:true
            }
            .start()
                    
        $("#btn-stop").click ->
          $("iframe[src*='google.com/maps']").mapScrollPrevent().stop()
        
        $("#btn-start").trigger "click"

  style.
    .embed-container {
      position: relative;
      padding-bottom: 56.25%;
      height: 0;
      overflow: hidden;
      max-width: 100%;
    }
    .embed-container iframe,
    .embed-container object,
    .embed-container embed {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    

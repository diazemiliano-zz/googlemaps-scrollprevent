extends _layout.jade
block title
  title #{baseTitle} Local Text
block localscript
  script(src="../dist/googlemaps-scrollprevent.js")
block content
  script
    :coffee-script
      $ ->    
        $("#btn-start").click ->
          $("iframe[src*='google.com/maps']")
            .scrollprevent {
              printLog:true
            }
            .start()
                    
          $("#btn-stop").click ->
            $("iframe[src*='google.com/maps']").scrollprevent().stop()
        
        $("#btn-start").trigger "click"

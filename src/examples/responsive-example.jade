extends _layout.jade
block title
  title #{baseTitle} Responsive Example
block content
  script
    :coffee-script
      $ ->
        $("#btn-start").click ->
          $("iframe[src*='google.com/maps']")
            .scrollprevent {
              printLog:true
            }
            .start()
                    
        $("#btn-stop").click ->
          $("iframe[src*='google.com/maps']").scrollprevent().stop()
        
        $("#btn-start").trigger "click"

  style.
    .embed-container {
      position: relative;
      padding-bottom: 56.25%;
      height: 0;
      overflow: hidden;
      max-width: 100%;
    }
    .embed-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
block map
